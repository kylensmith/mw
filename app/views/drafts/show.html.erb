<%@brackets.each do |b|%>
<%=b.name%> <%=b.sponsor%>
<% running_points = 0 %>
	<%b.competitors.each do |c|%>
		<%if @draft.competitors.include?(c)%>
		<strong><%="#{c.fname} #{c.lname}, #{c.team}"%></strong> <br>
			<%c.all_matches.each do |match|%>
			<%="#{match.tournament_match_number}"%> 
		

			<%="#{match.winning_competitor.fname} #{match.winning_competitor.lname} (#{match.winning_competitor.team}) #{round_text(match.bracket_round)} #{match_text(match.result)} #{match.losing_competitor.fname} #{match.losing_competitor.lname} (#{match.losing_competitor.team}), #{match.score}"%>
			
			<%if @draft.competitors.include?(match.winning_competitor)%>
			<% running_points += points_from_match(match_points(match.result), match.advancement_points, match.placement_points) %>
			<%end%>

			<%="Team Points: #{running_points}"%>
			<br>
			

			<%end%>
			


		<%end%>
		


	<%end%>
	<%="Total Points Earned: #{running_points}" %>
	<br>
	<br>
<%end%>







