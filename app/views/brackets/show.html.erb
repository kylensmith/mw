<%=@bracket.name%>

<h1><%=@bracket.event.event_name%> - <%=@bracket.name%></h1>




<main id="tournament">
	
	<ul class="round round-1">
		<%for i in 1..32 do %> 
		<li class="spacer">&nbsp;</li>
		<!-- note: add 'winner' class and names will become bold -->
		<% bout = where_match(105, i, @bracket.id)%>
		<li class="game game-top">
			<!-- If there is no value, render nothing -->
			
			<% if bout%>

			<%="#{bout.first_competitor.fname[0]} #{bout.first_competitor.lname}, #{bout.first_competitor.team}"%><span></span>
			<%else%>
			.
			<%end%>
		</li>	
		<li class="game game-spacer">
			<% if bout%>
			<% result = bout.result%>
			<span><%="#{match_text(result) if result } #{bout.score if result }"%></span>
			<%else%>
			.
			<%end%>
		</li>
		
		<li class="game game-bottom winner">
			
			
			<% if bout%>
			<%="#{bout.second_competitor.fname[0]} #{bout.second_competitor.lname}, #{bout.second_competitor.team}"%>
			<span></span></li>
			<% end%>
		<%end%>
	</ul>

